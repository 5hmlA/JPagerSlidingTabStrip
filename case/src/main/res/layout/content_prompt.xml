<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_tab_moments_h"
        android:padding="10dp"
        android:text="@string/title_activity_expand"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_tab_moments_h"
        android:padding="10dp"
        android:text="@string/title_activity_expand"/>

    <april.yun.widget.PromptView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_tab_profile_h"/>
    <april.yun.widget.PromptView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_tab_moments_h"/>

    <april.yun.JPagerSlidingTabStrip
        android:layout_margin="10dp"
        android:id="@+id/tabs"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="@dimen/sug_event_tabheight"/>
    <april.yun.JPagerSlidingTabStrip
        android:layout_margin="10dp"
        android:id="@+id/tabs2"

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="@dimen/sug_event_tabheight"/>

    <april.yun.widget.PromptImageView
        android:layout_marginLeft="14dp"
        android:layout_margin="14dp"
        android:padding="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:src="@mipmap/ic_launcher"/>

    <april.yun.widget.PromptTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:padding="18dp"
        android:gravity="center"
        android:layout_marginTop="9dp"
        android:text="Conta"/>
</LinearLayout>